<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="codedriver.framework.deploy.dao.mapper.DeployProfileMapper">

    <insert id="insertDeployProfileOperationByProfileIdAndOperateIdListAndType">
        INSERT INTO deploy_profile_operation ( profile_id, operate_id ,type)
        VALUES
        <foreach collection="operateIdList" item="operateId" separator=",">
            (#{profileId},#{operateId},#{type})
        </foreach>
    </insert>

    <insert id="insertProfile" parameterType="codedriver.framework.deploy.dto.profile.DeployProfileVo">
        INSERT INTO deploy_profile
        (id,
         name,
         description,
         config,
         system_id,
         fcd,
         fcu,
         lcd,
         lcu)
        VALUES (#{id},
                #{name},
                #{description},
                #{configStr},
                #{fromSystemId},
                NOW(3),
                #{fcu},
                NOW(3),
                #{fcu})
    </insert>

    <update id="updateProfile" parameterType="codedriver.framework.deploy.dto.profile.DeployProfileVo">
        UPDATE `deploy_profile`
        SET `name`        = #{name},
            `config`      = #{configStr},
            system_id     = #{fromSystemId},
            `description` = #{description},
            `lcd`         = NOW(3),
            `lcu`         = #{lcu}
        where `id` = #{id}
    </update>

    <select id="searchDeployProfileCount" parameterType="codedriver.framework.deploy.dto.profile.DeployProfileVo"
            resultType="int">
        SELECT
        COUNT(distinct a.id)
        <include refid="searchProfile"></include>
    </select>

    <sql id="searchProfile">
        <include refid="searchProfileFrom"></include>
        <if test="operateId != null">
            LEFT JOIN deploy_profile_operation apo ON apo.profile_id = a.id
        </if>
        <where>
            <if test="keyword != null and keyword != ''">
                AND (a.`name` LIKE CONCAT('%',#{keyword}, '%') OR a.`description` LIKE CONCAT('%',#{keyword}, '%'))
            </if>
            <if test="operateId != null">
                and apo.`operate_id` = #{operateId}
            </if>
            <if test="ciEntityId != null">
                and dpc.`ci_entity_id` = #{ciEntityId}
            </if>
            <if test="fromSystemId != null">
                and cc.`id` = #{fromSystemId}
            </if>
        </where>
    </sql>

    <sql id="searchProfileFrom">
        FROM
        `deploy_profile` a
        LEFT JOIN cmdb_cientity cc ON cc.id = a.system_id
        LEFT JOIN deploy_profile_cientity dpc ON dpc.profile_id=a.id
        LEFT JOIN cmdb_cientity cct ON cct.id = dpc.ci_entity_id
    </sql>

    <select id="searchDeployProfile" resultMap="profileMap">
        SELECT
        a.id,
        a.name,
        a.description,
        a.config as configStr,
        a.system_id AS fromSystemId,
        cc.name as fromSystemName,
        cct.id AS ciEntityId,
        cct.name as ciEntityName,
        a.fcd,
        a.fcu,
        a.lcd,
        a.lcu
        <include refid="searchProfile"></include>
        ORDER BY a.id DESC
        <if test="needPage == true">
            LIMIT #{startNum}, #{pageSize}
        </if>
    </select>

    <select id="checkProfileIsExists" resultType="int">
        SELECT count(1)
        FROM `deploy_profile`
        WHERE `id` = #{value}
    </select>

    <resultMap id="profileMap" type="codedriver.framework.deploy.dto.profile.DeployProfileVo">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="configStr" property="configStr"/>
        <result column="description" property="description"/>
        <result column="fromSystemId" property="fromSystemId"/>
        <result column="fromSystemName" property="fromSystemName"/>
        <result column="fcu" property="fcu"/>
        <result column="fcd" property="fcd"/>
        <result column="lcu" property="lcu"/>
        <result column="lcd" property="lcd"/>
        <collection property="ciEntityList" ofType="codedriver.framework.cmdb.dto.cientity.CiEntityVo">
            <id column="ciEntityId" property="id"/>
            <result column="ciEntityName" property="name"/>
            <result column="ciIcon" property="ciIcon"/>
        </collection>
        <collection property="autoexecOperationVoList"
                    ofType="codedriver.framework.autoexec.dto.AutoexecOperationVo">
            <id column="operateId" property="id"/>
            <result column="type" property="type"/>
        </collection>
    </resultMap>

    <select id="getProfileVoById" resultMap="profileMap">
        SELECT a.id,
        a.name,
        a.description,
        a.config AS configStr,
        a.system_id AS fromSystemId,
        cc.name as fromSystemName,
        cct.id AS ciEntityId,
        cct.name as ciEntityName,
        dpo.type,
        dpo.operate_id as operateId,
        a.fcd,
        a.fcu,
        a.lcd,
        a.lcu
        <include refid="searchProfileFrom"></include>
        left join deploy_profile_operation dpo on dpo.profile_id = a.id
        WHERE a.id = #{value}
    </select>

    <select id="getProfileOperationVoListByProfileId"
            resultType="codedriver.framework.deploy.dto.profile.DeployProfileOperationVo">
        select profile_id, operate_id, type
        from deploy_profile_operation
        where profile_id = #{value}
    </select>

    <select id="getDeployProfileIdList" resultType="java.lang.Long">
        SELECT distinct a.id
        <include refid="searchProfile"></include>
        ORDER BY a.id DESC
        <if test="needPage == true">
            LIMIT #{startNum}, #{pageSize}
        </if>
    </select>

    <select id="getProfileListByIdList" resultMap="profileMap">
        SELECT a.id,
        a.name,
        a.description,
        a.config as configStr,
        a.system_id AS fromSystemId,
        cc.name as fromSystemName,
        cct.id AS ciEntityId,
        cct.name as ciEntityName,
        cci.icon as ciIcon,
        a.fcd,
        a.fcu,
        a.lcd,
        a.lcu
        <include refid="searchProfileFrom"></include>
        LEFT JOIN cmdb_ci cci ON cci.id = cct.ci_id
        WHERE a.id in
        <foreach collection="idList" open="(" separator="," close=")" item="id">
            #{id}
        </foreach>
        ORDER BY a.lcd DESC
    </select>

    <select id="checkProfileNameIsRepeats" resultType="int">
        SELECT count(1)
        FROM deploy_profile
        WHERE id != #{id}
          AND name =#{name}
    </select>

    <delete id="deleteProfileById">
        DELETE
        FROM deploy_profile
        WHERE id = #{value}
    </delete>

    <delete id="deleteProfileOperationByProfileId">
        DELETE
        FROM deploy_profile_operation
        WHERE profile_id = #{value}
    </delete>
</mapper>

